{
    "private": true,
    "name": "mangrove-monorepo",
    "workspaces": {
        "packages": [
            "packages/*"
        ]
    },
    "scripts": {
        "postinstall": "husky install",
        "build": "yarn workspaces foreach --topological-dev run build",
        "test": "yarn workspaces foreach --topological-dev run test"
    },
    "devDependencies": {
        "husky": "^7.0.2"
    }
}
