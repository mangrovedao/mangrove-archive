{
  "name": "@giry/mangrove-solidity",
  "version": "1.0.0",
  "author": "Mangrove DAO",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "prepack": "yarn run build",
    "build-this-package": "hardhat compile && yarn run copy-distribution-assets",
    "build": "yarn install && yarn workspaces foreach -vpiR --topological-dev --from $npm_package_name run build-this-package",
    "copy-distribution-assets": "node copyDistributionAssets.js",
    "clean-this-package": "rimraf build cache dist",
    "clean": "yarn workspaces foreach -vpiR --topological-dev --from $npm_package_name run clean-this-package",
    "doc": "solcco -f doc/MgvDoc.html structs.js contracts/MgvLib.sol contracts/MgvRoot.sol contracts/MgvHasOffers.sol contracts/MgvOfferMaking.sol contracts/MgvOfferTaking.sol contracts/MgvOfferTakingWithPermit.sol contracts/MgvGovernable.sol contracts/AbstractMangrove.sol contracts/Mangrove.sol contracts/InvertedMangrove.sol",
    "test-with-dependencies": "yarn workspaces foreach -vpiR --topological-dev --from $npm_package_name run test",
    "test": "npm-run-all \"test:*\"",
    "test:solidity": "cross-env NODE_ENV=test NODE_APP_INSTANCE=solidity hardhat test-solidity",
    "test:ethereum-mainnet": "yarn run testSuites --network ethereum",
    "test:polygon-mainnet": "yarn run testSuites --network polygon",
    "testSuites": "cross-env NODE_ENV=test node lib/test-suite-runner.js"
  },
  "devDependencies": {
    "@espendk/json-file-reporter": "^1.4.1",
    "@ethersproject/hardware-wallets": "^5.0.0",
    "@giry/hardhat-test-solidity": "^0.0.10",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "adhusson-hardhat-solpp": "^2.0.2",
    "app-module-path": "^2.2.0",
    "chai": "^4.3.4",
    "chai-events": "^0.0.3",
    "config": "^3.3.6",
    "cross-env": "^7.0.3",
    "dotenv-flow": "^3.2.0",
    "ethers": "^5.4.6",
    "fs": "^0.0.1-security",
    "hardhat": "^2.4.1",
    "hardhat-abi-exporter": "^2.3.0",
    "hardhat-deploy": "^0.9.0",
    "hardhat-deploy-ethers": "^0.3.0-beta.10",
    "lint-staged": "^10.5.1",
    "mocha": "^7.2.0",
    "mocha-multi-reporters": "^1.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.3",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "solcco": ">=1.0.11",
    "yargs": "^17.1.1"
  },
  "lint-staged": {
    "*.{js,css,md,sol}": "prettier --write"
  }
}
