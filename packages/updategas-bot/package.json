{
  "name": "@giry/updategas-bot",
  "version": "0.0.1",
  "author": "Mangrove DAO",
  "description": "A simple gas-update bot for Mangrove",
  "license": "BSD-3-Clause",
  "main": "dist/index.js",
  "keywords": [
    "Mangrove",
    "keeper",
    "bot"
  ],
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "precommit": "lint-staged",
    "format": "prettier --write --ignore-unknown .",
    "build-this-package": "yarn run format && tsc",
    "build": "yarn install && yarn workspaces foreach -vpiR --topological-dev --from $npm_package_name run build-this-package",
    "clean-this-package": "rimraf dist",
    "clean": "yarn workspaces foreach -vpiR --topological-dev --from $npm_package_name run clean-this-package",
    "start": "node build/index.js",
    "test-with-dependencies": "yarn workspaces foreach -vpiR --topological-dev --from $npm_package_name run test",
    "test": "npm-run-all \"test:*\"",
    "test:integration": "cross-env NODE_ENV=test mocha --config test/mocha/config/integration-tests.json",
    "local-hardhat:start-node": "hardhat node --no-deploy",
    "local-hardhat:deploy-mangrove": "hardhat deploy --network localhost"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@ethersproject/experimental": "^5.5.0",
    "@giry/commonlib-js": "workspace:*",
    "@giry/mangrove-js": "workspace:*",
    "@types/big.js": "^6.1.2",
    "axios": "^0.24.0",
    "big.js": "^6.1.1",
    "config": "^3.3.6",
    "dotenv-flow": "^3.2.0",
    "ethers": "^5.4.7",
    "fast-safe-stringify": "^2.1.1",
    "toad-scheduler": "^1.6.0"
  },
  "devDependencies": {
    "@espendk/json-file-reporter": "^1.4.2",
    "@ethersproject/hardware-wallets": "^5.4.0",
    "@giry/hardhat-mangrove": "workspace:*",
    "@giry/mangrove-solidity": "workspace:*",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/config": "^0.0.39",
    "@types/dotenv-flow": "^3.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.9.4",
    "@types/shelljs": "^0.8.9",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "hardhat": "^2.6.4",
    "hardhat-deploy": "^0.9.1",
    "hardhat-deploy-ethers": "^0.3.0-beta.11",
    "lint-staged": "^11.1.2",
    "mocha": "^9.1.1",
    "mocha-multi-reporters": "^1.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "2.3.2",
    "prettier-eslint": "^13.0.0",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  }
}
