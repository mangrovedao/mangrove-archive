{
  "name": "@mangrove-exchange/cleaning-bot-naive",
  "version": "0.0.1",
  "author": "Mangrove DAO",
  "description": "A simple and naive order book cleaning bot for Mangrove",
  "license": "BSD-3-Clause",
  "main": "dist/nodejs/index.ts",
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "precommit": "lint-staged",
    "format": "prettier --write --ignore-unknown .",
    "build": "yarn run format && tsc && yarn run copy-static-assets",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "prepare": "cd ../.. && husky install bots/cleaning-bot-naive/.husky",
    "start": "cd dist/nodejs && node index.js",
    "test": "mocha --reporter mocha-multi-reporters --reporter-option configFile=mocha-multi-reporters.json -r ts-node/register 'test/**/*.ts'",
    "local-hardhat:deploy-mangrove": "hardhat deploy --network localhost",
    "local-hardhat:create-test-market": "yarn run local-hardhat:deploy-mangrove && hardhat run packages/bot-bootstrap/src/populate-market.js"
  },
  "keywords": [
    "Mangrove",
    "keeper",
    "bot"
  ],
  "dependencies": {
    "@mangrove-exchange/mangrove-js": "workspace:*",
    "config": "^3.3.6",
    "dotenv-flow": "^3.2.0"
  },
  "devDependencies": {
    "@espendk/json-file-reporter": "^1.4.2",
    "@types/chai": "^4.2.21",
    "@types/config": "^0.0.39",
    "@types/dotenv-flow": "^3.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.9.4",
    "@types/shelljs": "^0.8.9",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "mocha": "^9.1.1",
    "mocha-multi-reporters": "^1.5.1",
    "prettier": "2.3.2",
    "prettier-eslint": "^13.0.0",
    "shelljs": "^0.8.4",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
