{
  "name": "@mangrove-exchange/mangrove-js",
  "version": "0.0.1",
  "author": "Mangrove DAO",
  "description": "A Typescript SDK for the Mangrove Protocol.",
  "license": "BSD-3-Clause",
  "main": "dist/nodejs/index.js",
  "scripts": {
    "lint": "npx eslint ./src/*.ts",
    "install": "npm run build",
    "build": "npm run lint && npm run typechain && tsc && npm run rollup",
    "publish_patch": "npm version patch && npm publish --access public",
    "publish_minor": "npm version minor && npm publish --access public",
    "publish_major": "npm version major && npm publish --access public",
    "rollup": "rollup -c rollup.config.ts",
    "test": "cross-env NODE_ENV=test nyc --reporter=lcov mocha -r ts-node/register ./test/index.js  --timeout 60000 --reporter mocha-multi-reporters --reporter-options configFile=mocha-multi-reporters.json",
    "clean-typechain": "rimraf src/types/typechain/*.ts",
    "typechain": "npm run clean-typechain && npx typechain --target=ethers-v5 --out-dir=src/types/typechain \"../mangrove-solidity/build/exported-abis/**/*.json\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/giry-dev/mangrove.git"
  },
  "keywords": [
    "mangrove",
    "mangrove.js",
    "mangrove exchange",
    "decentralized finance",
    "defi",
    "ethereum"
  ],
  "dependencies": {
    "big.js": "^6.1.1",
    "config": "^3.3.6",
    "dotenv-flow": "^3.2.0",
    "ethers": "^5.3.0",
    "typedoc": "^0.21.4"
  },
  "devDependencies": {
    "@espendk/json-file-reporter": "^1.4.2",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@typechain/ethers-v5": "^7.0.1",
    "@types/big.js": "^6.1.1",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.0.11",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.2.0",
    "cross-env": "^7.0.3",
    "docblock-parser": "^1.0.0",
    "eslint": "^7.9.0",
    "hardhat": "^2.4.1",
    "hardhat-deploy": "^0.9.1",
    "hardhat-deploy-ethers": "^0.3.0-beta.10",
    "mocha": "^8.2.1",
    "mocha-multi-reporters": "^1.5.1",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.15.0",
    "rollup-plugin-babel-minify": "^10.0.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-essentials": "^8.0.0",
    "ts-node": "^9.1.1",
    "typechain": "^5.1.2",
    "typescript": "^4.3.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ]
  }
}
